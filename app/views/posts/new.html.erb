<div class="form">
  
    <div class="form_title">
      <h2>New Give</h2>
    </div>
    <%= form_with model:@post, local:true do |form| %>
      
      <div class="name">
      <%= form.label :name %>
      <%= form.text_field :name %>
      </div>
      <div class="title">
      <%= form.label :title %>
      <%= form.text_field :title %>
      </div>
      <div class="content">
      <%= form.label :content %>
      <%= form.text_area :content %>
      </div>
      <input type="submit" value="Give!">
    <% end %>
  
</div>
